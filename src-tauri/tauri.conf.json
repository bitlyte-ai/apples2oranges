{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "apples2oranges",
  "version": "0.1.0",
  "identifier": "com.lumena.apples2oranges",
  "build": {
    "frontendDist": "../dist",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "apples2oranges - LLM Comparison Playground",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Capability for main application functionality",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "opener:default",
            "dialog:default",
            "dialog:allow-open",
            "core:window:allow-destroy"
          ]
        }
      ]
    }
  },
  "plugins": {},
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "11.0"
    }
  }
}
